@{
  Layout = "_Layout";
}

@model Store.Models.Treat

<h1>Add Flavor to: @Html.DisplayFor(model => model.TreatName)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")
  <br>

  <input type="submit" value="Add" class="btn btn-lg btn-info" style="margin-top: 4%;"/>
}

<p>@Html.ActionLink("Back to Treats", "Index")</p>